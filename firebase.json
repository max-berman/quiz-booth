{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/games/:gameId/questions",
        "function": "getGameQuestionsCount"
      },
      {
        "source": "/api/games/:gameId/play-count",
        "function": "getGamePlayCount"
      },
      {
        "source": "/assets/**",
        "destination": "/assets/**"
      },
      {
        "source": "/",
        "function": "ssrHandler"
      },
      {
        "source": "/about",
        "function": "ssrHandler"
      },
      {
        "source": "/quiz-games",
        "function": "ssrHandler"
      },
      {
        "source": "/faq",
        "function": "ssrHandler"
      },
      {
        "source": "/pricing",
        "function": "ssrHandler"
      },
      {
        "source": "/contact",
        "function": "ssrHandler"
      },
      {
        "source": "/game/**",
        "function": "ssrHandler"
      },
      {
        "source": "/dashboard",
        "function": "ssrHandler"
      },
      {
        "source": "/setup",
        "function": "ssrHandler"
      },
      {
        "source": "/edit-questions/**",
        "function": "ssrHandler"
      },
      {
        "source": "/game-created",
        "function": "ssrHandler"
      },
      {
        "source": "/game-customization/**",
        "function": "ssrHandler"
      },
      {
        "source": "/leaderboard/**",
        "function": "ssrHandler"
      },
      {
        "source": "/results/**",
        "function": "ssrHandler"
      },
      {
        "source": "/submissions/**",
        "function": "ssrHandler"
      },
      {
        "source": "/auth/**",
        "function": "ssrHandler"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "unsafe-none"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=()"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|json|txt|xml|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.firebaseio.com https://*.googleapis.com; frame-src 'self' https://*.firebaseapp.com;"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "firebase-functions",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "storage": {
      "port": 9199,
      "rules": "storage.rules.emulator"
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "dataDir": "./emulator-data"
  }
}