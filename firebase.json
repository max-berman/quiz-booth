{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/games/questions",
        "function": "getGameQuestions"
      },
      {
        "source": "/api/games/play-count",
        "function": "getGamePlayCount"
      },
      {
        "source": "**/*.@(js|css|json|txt|xml|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|webmanifest)",
        "destination": "/$1"
      },
      {
        "source": "/assets/**",
        "destination": "/assets/$1"
      },
      {
        "source": "/",
        "function": "ssrHandler"
      },
      {
        "source": "/about",
        "function": "ssrHandler"
      },
      {
        "source": "/quiz-games",
        "function": "ssrHandler"
      },
      {
        "source": "/faq",
        "function": "ssrHandler"
      },
      {
        "source": "/pricing",
        "function": "ssrHandler"
      },
      {
        "source": "/contact",
        "function": "ssrHandler"
      },
      {
        "source": "/game/**",
        "function": "ssrHandler"
      },
      {
        "source": "/dashboard",
        "function": "ssrHandler"
      },
      {
        "source": "/setup",
        "function": "ssrHandler"
      },
      {
        "source": "/edit-questions/**",
        "function": "ssrHandler"
      },
      {
        "source": "/game-created",
        "function": "ssrHandler"
      },
      {
        "source": "/game-customization/**",
        "function": "ssrHandler"
      },
      {
        "source": "/leaderboard/**",
        "function": "ssrHandler"
      },
      {
        "source": "/results/**",
        "function": "ssrHandler"
      },
      {
        "source": "/submissions/**",
        "function": "ssrHandler"
      },
      {
        "source": "/auth/**",
        "function": "ssrHandler"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin-allow-popups"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|json|txt|xml|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "firebase-functions",
    "runtime": "nodejs18"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "dataDir": "./emulator-data"
  }
}