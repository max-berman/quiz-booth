rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to game logos for authenticated users
    match /game-logos/{gameId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to game logos (for players)
    match /game-logos/{gameId}/{fileName} {
      allow read: if true;
    }
  }
}
