rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // PRODUCTION RULES - Strict security for production
    
    // Allow public read access to game logos (for players)
    // Allow write access only for authenticated users
    match /game-logos/{gameId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all other operations
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
